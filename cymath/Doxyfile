                         doxygen-awesome-css/doxygen-awesome-sidebar-only.css

# Specify the color style (LIGHT or DARK)
HTML_COLORSTYLE        = TOGGLE

# Exclude directories from processing (optional)
EXCLUDE                = examples

# Exclude specific files (optional)
EXCLUDE_PATTERNS       =

